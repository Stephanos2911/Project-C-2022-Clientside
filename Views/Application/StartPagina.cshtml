@model UserApplication.Models.Message
<body>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/Startpagina.css">
</head>

    <p class = "text">Welkom op HuisKompas</p>

    <div class = "solicon"><img src = "~/img/solicon.png"></div>
    <div class = "compassicon"><img src = "~/img/compass.png"></div>

    <a asp-action="MainMenu" asp-controller="Application" class="Verder">
         <div class = "verdertext">
             Klik hier om naar het hoofdmenu te gaan
         </div>
    </a>

    <div class = "vertical"></div>

 
    <div class="contactpopup">
        <input type="checkbox" id="click">
    <label for ="click" class="Contact">Contact</label>

    <div class="content">
        <p class = "contacttext">Neem contact op met ons!</p>
        <div class = "solinfo">
                Telefoonnummer SOL: 010 ï¿½ 244 8240 <br>
                Locatie: Schommelstraat 69 <br>
                Postcode: 3035 CG Rotterdam <br>
                <img src = "~/img/phone.png" class = "phone">
                <img src = "~/img/gpsicon.png" class = "location">
                <img src = "~/img/contacticon.png" class = "zipcode">
        </div>

        <p class = personalname>* Naam</p>
        <p class = personalphone>* Telefoonnummer</p>
        <p class = personalmessage>* Bericht</p>


        <form method="post" asp-action="Startpagina" asp-controller="Application">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="NameOfSender" class="Naam" placeholder="Type hier uw naam..."/> 
            <span asp-validation-for="NameOfSender" class="text-danger"></span> 
         
            <input asp-for="PhoneNumber" class="Telefoonnummer" placeholder="Type hier uw telefoonnummer..." />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
       
            <input asp-for="MessageBody" class="Bericht" placeholder="Type hier uw bericht..."/>
            <span asp-validation-for="MessageBody" class="text-danger"></span>

            <input type="submit" value="Versturen" class = "verstuurknop"/>
        </form>
        <a asp-action="Startpagina" asp-controller="Application" class="close-btn">
            <div>
                X
            </div>
        </a>
    </div>
    </div>

    <div class="infopopup">
        <input type="checkbox" id="click2">
    <label for ="click2" class="Info">Informatie</label>

    <div class="content2">

        <iframe class= "infovid" src="https://www.youtube.com/watch?v=XvpWixbmQHY" title="Beginvideo SOL" borderbegin="0">
        </iframe>

        <a asp-action="Startpagina" asp-controller="Application" class="close-btn">
            <div>
                X
            </div>
        </a>
    </div>
    </div>

    @section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

</body>